{
    "name": "ddd-kit-root",
    "type": "module",
    "private": true,
    "packageManager": "pnpm@9.0.0",
    "workspaces": [
        "packages/*",
        "apps/*"
    ],
    "scripts": {
        "prepare": "husky",
        "build": "pnpm -w -r --filter ./packages/* run build",
        "typecheck": "pnpm -r run typecheck"
    },
    "pnpm": {
        "overrides": {
            "zod": "^4.1.5",
            "drizzle-orm": "^0.44.5",
            "@asteasolutions/zod-to-openapi": "^8.0.0"
        }
    },
    "version": "0.0.2",
    "devDependencies": {
        "@commitlint/cli": "^19.8.1",
        "@commitlint/config-conventional": "^19.8.1",
        "husky": "^9.1.7"
    }
}