{
  "name": "ddd-kit--finance-api",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm db:start && tsx watch --env-file .env src/server.ts",
    "build": "tsup src/server.ts --format esm,cjs",
    "start": "node dist/server.js",
    "typecheck": "tsc --noEmit",
    "db:start": "docker-compose up -d",
    "db:stop": "docker-compose down --volumes",
    "db:generate": "drizzle-kit generate --config=drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config=drizzle.config.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.4.0",
    "@hono/swagger-ui": "^0.5.2",
    "@hono/zod-openapi": "^1.1.0",
    "@scalar/hono-api-reference": "^0.9.13",
    "ddd-kit": "^0.0.9",
    "drizzle-orm": "^0.44.5",
    "hono": "^4.4.0",
    "pg": "^8.12.0",
    "stoker": "^2.0.1",
    "ulid": "^2.4.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@types/pg": "^8.15.5",
    "dotenv": "^17.2.1",
    "drizzle-kit": "latest",
    "rimraf": "^6.0.0",
    "tsup": "^8.0.1",
    "tsx": "^4.7.1",
    "typescript": "^5.6.0"
  },
  "engines": {
    "node": ">=18.17"
  },
  "packageManager": "pnpm@9.0.0+sha512.b4106707c7225b1748b61595953ccbebff97b54ad05d002aa3635f633b9c53cd666f7ce9b8bc44704f1fa048b9a49b55371ab2d9e9d667d1efe2ef1514bcd513"
}