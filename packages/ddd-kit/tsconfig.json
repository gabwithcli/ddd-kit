{
  "compilerOptions": {
    // --- Project Type ---
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    // --- Module System ---
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",

    // --- Output ---
    "outDir": "./dist",
    "rootDir": "./src",

    // --- Interoperability ---
    "esModuleInterop": true,
    "isolatedModules": true,

    // --- Strictness & Best Practices ---
    "strict": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true
  },

  // This is the most critical part that fixes the "file not listed" error.
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
